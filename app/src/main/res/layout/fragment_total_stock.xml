<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primaryColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Kelola Bahan"
                    android:fontFamily="@font/poppinsmedium"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quick Actions Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="11dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- Tombol Tambah Bahan -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_stock"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:text="Tambah Bahan" />

                    <!-- Tombol Unduh CSV -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUnduhCsv"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:text="Unduh CSV" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Stock Distribution Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="13dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Distribusi Stok per Kategori"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnDatePicker"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginStart="286dp"
                        android:layout_marginTop="-29dp"
                        android:layout_marginBottom="-10dp"
                        android:contentDescription="Pilih Tanggal"/>

                    <!-- Pie Chart Container -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Legend -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <!-- Layout Kiri (4 Kategori) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <!-- Bumbu Halus -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/green2" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Bumbu Halus"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/bumbu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <!-- Kecap -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/brown" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Kecap"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/kecap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <!-- Minyak Goreng -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/yellow" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Minyak Goreng"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/goreng"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <!-- Sayur -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/green" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Sayur"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/sayur"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Layout Kanan (3 Kategori) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Mie -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/orange" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Mie"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/mie"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <!-- Protein -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Protein"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/protein"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                            <!-- Lainnya -->
                            <LinearLayout
                                android:layout_width="166dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="8dp">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:background="@color/blue_primary" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Lainnya"
                                    android:textColor="@color/black"
                                    android:textSize="11dp"
                                    tools:ignore="TextSizeCheck" />

                                <TextView
                                    android:id="@+id/lain"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stock Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="Ringkasan Stok"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:columnCount="2"
                        android:rowCount="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Total Item"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/total_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="24"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Total Kategori"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/total_kategori"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="Stok Menipis"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            tools:ignore="TextSizeCheck" />

                        <TextView
                            android:id="@+id/stok_menipis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

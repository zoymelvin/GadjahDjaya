<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Baris Utama: Tanggal, Kategori, Jumlah -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsregular"
                android:gravity="start"
                android:text="2025-03-01"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Pemasukan"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#4CAF50"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Rp 50.000"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Label Detail Pesanan -->
        <TextView
            android:id="@+id/tvDetailPesananLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pesanan:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"/>

        <!-- Layout untuk Detail Pesanan -->
        <LinearLayout
            android:id="@+id/detailPesananLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="4dp">
        </LinearLayout>

        <!-- ðŸ”¥ Tambahkan TextView untuk Deskripsi Pengeluaran -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi:"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingTop="4dp"
            android:fontFamily="@font/poppinsregular"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>

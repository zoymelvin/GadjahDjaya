<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_rounded_box"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/iv_status_transaksi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_check_circle"
        android:layout_gravity="center_vertical"
        app:tint="@color/green" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tv_id_transaksi"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:text="ID: ORDER-1740901186005"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tgltransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-03-02 14:41:56"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 26.000"
        android:textSize="16sp"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"/>
</LinearLayout>
